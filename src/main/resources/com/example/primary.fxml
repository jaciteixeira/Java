<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="356.0" prefWidth="275.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox prefHeight="25.0" prefWidth="200.0" spacing="20.0">
         <children>
            <TextField fx:id="txtNome" onAction="#adicionarAluno" promptText="Nome do Aluno" />
            <Button mnemonicParsing="false" onAction="#adicionarAluno" text="Adicionar" />
         </children>
      </HBox>
      <TextArea fx:id="txtAlunos" prefHeight="200.0" prefWidth="200.0" />
      <Button mnemonicParsing="false" onAction="#switchToSecondary" text="Mudar Tela" />
   </children>
</VBox>
